{
    "name": "jewl-root",
    "private": true,
    "scripts": {
        "build": "nx run-many --target build --projects",
        "clean": "nx reset && rm -r ./**/build",
        "start": "nx run-many --target start --projects",
        "watch": "nodemon --quiet --watch \"./*/src/*\" --ext \"*\" --exec npm start",
        "test": "node --experimental-vm-modules --no-warnings ./node_modules/.bin/jest -u",
        "lint": "node ./node_modules/.bin/eslint ."
    },
    "devDependencies": {
        "@types/cors": "^2.8.13",
        "@types/dompurify": "^2.4.0",
        "@types/express": "^4.17.17",
        "@types/jest": "^29.4.0",
        "@types/marked": "^4.0.8",
        "@types/node": "^18.14.2",
        "@types/node-fetch": "^2.6.2",
        "@types/on-finished": "^2.3.1",
        "@types/react": "^18.0.28",
        "@types/react-dom": "^18.0.11",
        "@types/react-helmet": "^6.1.6",
        "@types/react-test-renderer": "^18.0.0",
        "@types/swagger-ui-express": "^4.1.3",
        "@typescript-eslint/eslint-plugin": "^5.54.0",
        "@typescript-eslint/parser": "^5.53.0",
        "dotenv": "^16.0.3",
        "eslint": "^8.35.0",
        "eslint-plugin-react": "^7.32.2",
        "jest": "^29.4.3",
        "nodemon": "^2.0.20",
        "nx": "15.7.2",
        "react-test-renderer": "^18.2.0",
        "serve": "^14.2.0",
        "ts-jest": "^29.0.5",
        "typescript": "^4.9.5"
    },
    "workspaces": [
        "api",
        "core",
        "isomorphic",
        "lambda",
        "web"
    ],
    "jest": {
        "preset": "ts-jest/presets/default-esm",
        "moduleNameMapper": {
            "^(\\.{1,2}/.*)\\.js$": "$1",
            "^.*\\.(css|less|sass|scss)$": "identity-obj-proxy",
            "^jewl-core$": "<rootDir>/core/src/index"
        }
    }
}
